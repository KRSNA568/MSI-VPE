# MSI-VPE Backend Environment Variables
# Copy this file to .env and customize for your environment

# Application Settings
DEBUG=True
LOG_LEVEL=INFO

# API Settings
API_V1_PREFIX=/api/v1

# Database
DATABASE_URL=sqlite:///./msi_vpe.db
DATABASE_ECHO=False

# AI Models (Hugging Face)
EMOTION_MODEL_PRIMARY=SamLowe/roberta-base-go_emotions
EMOTION_MODEL_SECONDARY=j-hartmann/emotion-english-distilroberta-base
EMOTION_MODEL_TERTIARY=bhadresh-savani/distilbert-base-uncased-emotion

# Model Cache Directory
MODEL_CACHE_DIR=./models_cache

# Inference Settings
MAX_SEQUENCE_LENGTH=512
BATCH_SIZE=8
CONFIDENCE_THRESHOLD=0.3

# Knowledge Base
KNOWLEDGE_BASE_DIR=./knowledge-base

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=[".fountain", ".txt"]

# Performance
ENABLE_CACHING=True
CACHE_TTL=3600

# Feature Flags (for capstone scope management)
ENABLE_ENSEMBLE_MODELS=True
ENABLE_ADVANCED_VISUAL_MAPPING=True
ENABLE_SCENE_BEAT_DETECTION=True

# CORS Origins (comma-separated)
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173
